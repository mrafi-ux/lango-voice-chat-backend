# VoiceCare Backend Environment Configuration

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./voicecare.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/voicecare

# Server Configuration
APP_HOST=127.0.0.1
APP_PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]

# API Keys (Optional - set for enhanced features)
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Service Provider Configuration
STT_PROVIDER=elevenlabs  # options: elevenlabs, openai, whisper
TTS_PROVIDER=elevenlabs  # options: elevenlabs, openai, browser
TRANSLATION_PROVIDER=auto  # options: auto, openai, libre

# Voice Processing Settings
MAX_VOICE_SECONDS=120
WHISPER_MODEL=tiny  # options: tiny, base, small, medium, large
WHISPER_COMPUTE=cpu  # options: cpu, cuda

# Translation Settings
LIBRE_TRANSLATE_URL=https://libretranslate.com/translate
OPENAI_TRANSLATE_MODEL=gpt-4o

# Authentication
AUTH_SECRET_KEY=your-secret-key-change-in-production
AUTH_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Logging
LOG_LEVEL=INFO  # options: DEBUG, INFO, WARNING, ERROR, CRITICAL
